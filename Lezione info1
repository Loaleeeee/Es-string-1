#include <iostream>
using namespace std;
int main()
{  
double n=0;
int voti=0;
double media=0;
cout<<"Quanti voti vuoi inserire?"<<endl;
  cin>>voti ;
for(int i=1;i<=voti;i++)
  {
  cout<<"Dammi il voto "<<i<<endl;
  cin>>n;
  if(n<1.0 || n>9.0)
    {
      cout<< "voto non è compreso tra 1 e 9" << endl;
      cin>>n;
    }
  else
    {media=media+n;}
 
  }
  media=media/voti;
  cout<<"La media dei voti è: "<<media;
  
  return 0;
}
